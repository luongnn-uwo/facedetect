<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recognizer">
    >

    <org.opencv.android.JavaCameraView
        android:id="@+id/RecogFaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </org.opencv.android.JavaCameraView>

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/bluebg"
        android:orientation="vertical"
        android:padding="5dp" >
            <Button
                android:id="@+id/ConfirmButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="550dp"
                android:layout_marginTop="260dp"
                android:layout_alignParentRight="true"
                android:text="CONFIRM"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/HeadImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="560dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"

                android:contentDescription="HeadImage"
                app:srcCompat="@drawable/headimage" />

            <TextView
                android:id="@+id/RecogName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="560dp"
                android:layout_marginTop="130dp"
                android:layout_alignParentRight="true"
                android:text="Student"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Recognized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="560dp"
                android:layout_marginTop="180dp"
                android:layout_alignParentRight="true"
                android:text="Recognized !"
                android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>